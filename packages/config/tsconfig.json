{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDirs": ["src"],
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "dist"
  },
  "types": [ "node" ],
  "include": [
    "src/**/*.ts",
    "config.d.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
