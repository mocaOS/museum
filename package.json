{
  "name": "moca-migration",
  "private": true,
  "packageManager": "bun@1.2.0",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "FORCE_COLOR=1 turbo build",
    "dev": "FORCE_COLOR=1 turbo dev",
    "dev:web": "FORCE_COLOR=1 turbo dev --filter=@local/config --filter=directus-extension-moca --filter=api --filter=web",
    "dev:agents": "FORCE_COLOR=1 infisical run --env=dev --path=/moca-agent -- turbo dev --filter=@local/config --filter=moca-agent",
    "postinstall": "# patch-package",
    "deploy": "node deploy.js"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "eslint": "^8.57.1"
  },
  "devDependencies": {
    "patch-package": "^7.0.2",
    "postinstall-postinstall": "^2.1.0",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "workspaces": [
    "apps/api",
    "apps/api/extensions/*",
    "apps/web",
    "apps/moca-agent",
    "packages/*"
  ],
  "overrides": {
    "borsh": "0.7.0",
    "onnxruntime-node": "1.20.0",
    "prebuild-install": "^7.1.2",
    "tar-fs": "^3.0.6",
    "tar": "^6.2.1",
    "chownr": "^2.0.0",
    "ipx": "^3.1.1"
  },
  "patchedDependencies": {
    "@directus/api@30.0.0": "patches/@directus%2Fapi@30.0.0.patch"
  }
}
