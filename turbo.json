{
  "$schema": "https://turbo.build/schema.json",
  "remoteCache": {
    "apiUrl": "https://remote-cache.deploy.qwellco.de"
  },
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".output/**", "dist/**", "!.nuxt"]
    },
    "lint": {},
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
